{
  "name": "service_now-transformer",
  "version": "0.1",
  "type": "api",
  "docker_image": "runnerdockerrepo/service_now-transformer:0.1",
  "config_parameters": {
    "name": "kafka_connectivity_options",
    "label": "Kafka Connectivity Options",
    "order": 1,
    "controls": [
      {
        "label": "Test Kafka Connectivity",
        "action": "test_kafka_connectivity",
        "message": "Testing Kafka Connectivity",
        "type": "icon",
        "icon": {
          "group": "action",
          "name": "assessment"
        }
      }
    ],
    "items": [
      {
        "name": "producer_topic",
        "label": "Producer Topic",
        "type": "text",
        "environment_variable_name": "PRODUCER_TOPIC",
        "placeholder": "Producer Topic",
        "required": true,
        "order": 1,
        "verify": false
      },
      {
        "name": "consumer_topic",
        "label": "Consumer Topic",
        "type": "text",
        "environment_variable_name": "CONSUMER_TOPIC",
        "placeholder": "Consumer Topic",
        "required": true,
        "order": 2,
        "verify": false
      }
    ]
  }
}